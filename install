#!/bin/bash
sudo apt-get update
sudo apt-get upgrade
echo "Installing dependencies, this may take a while."
sudo apt-get install git-core couchdb nodejs python3 python3-pip
sudo pip-3.2 install requests
git clone git://git.drogon.net/wiringPi
cd wiringPi
./build
cd ..
git clone git://github.com/Sijmen/switchit.git
cd switchit
cd lights
make rebuild
sudo chown root *.o && chmod =x *.o && chmod +s *.o
cd ..
chmod a+x update erica
python3 setup/server.py
